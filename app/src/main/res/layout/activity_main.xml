<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.45"
        android:background="@android:color/white">

        <TextView
            android:layout_width="118dp"
            android:layout_height="118dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:id="@+id/texto_view_catalogo"
            android:background="@drawable/button1"
            android:gravity="center"
            android:scaleType="centerInside"
            android:text="TR"
            android:textColor="@android:color/white"
            android:textSize="40dp"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="0.05"
        android:gravity="top"
        android:text="Seleccionar ficha de color"/>

    <TableLayout
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.45"
        android:gravity="top">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:weightSum="5">

            <ImageButton
                android:id="@+id/ImageButton1"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/button1"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/checkselected"/>

            <ImageButton
                android:id="@+id/ImageButton2"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/button2"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/checkselected"/>

            <ImageButton
                android:id="@+id/ImageButton3"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/button3"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/checkselected"/>

            <ImageButton
                android:id="@+id/ImageButton4"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/button4"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/checkselected"/>

            <ImageButton
                android:id="@+id/ImageButton5"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/button5"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/checkselected"
                />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:weightSum="5">

            <ImageButton
                android:id="@+id/ImageButton6"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/button6"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/checkselected"
                />

            <ImageButton
                android:id="@+id/ImageButton7"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/button7"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/checkselected"
                />

            <ImageButton
                android:id="@+id/ImageButton8"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/button8"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/checkselected"
                />

            <ImageButton
                android:id="@+id/ImageButton9"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/button9"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/checkselected"
                />

            <ImageButton
                android:id="@+id/ImageButton10"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/button10"
                android:onClick="onClick"
                android:scaleType="centerInside"
                android:src="@drawable/checkselected"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>

